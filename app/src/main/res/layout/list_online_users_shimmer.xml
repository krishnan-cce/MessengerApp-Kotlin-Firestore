<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="60dp"
    android:layout_height="65dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_online_user_img"
        android:layout_width="50dp"
        android:background="@drawable/shimmer_circle"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_online_user_name"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@color/shimmerGrey"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/iv_online_user_img"
        app:layout_constraintStart_toStartOf="@+id/iv_online_user_img"
        app:layout_constraintTop_toBottomOf="@+id/iv_online_user_img" />

    <ImageView
        android:id="@+id/iv_online_status"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/shimmer_circle"
        app:layout_constraintEnd_toEndOf="@+id/iv_online_user_img"
        app:layout_constraintTop_toTopOf="@+id/iv_online_user_img" />
</androidx.constraintlayout.widget.ConstraintLayout>